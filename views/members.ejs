    const name = event.target.value;
    const dashName = name.replace(/\s+/g, '-'); //replace spaces with dash
    // console.log(imgName);

    const markup = `
        <li id="${dashName}">
            <img src="/members/${dashName}.JPG"" alt="">
            <h3>${name}</h3>
        </li>
    `;
